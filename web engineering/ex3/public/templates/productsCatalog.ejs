<% data.forEach(function (p) { %>
    <a name="products-<%= p.category.toLocaleLowerCase() %>" id="products-<%= p.category.toLocaleLowerCase() %>"
       class="anchor"></a>
    <h1><%- p.category %></h1>
    <div class="row mb-5" id="products-<%= p.category.toLocaleLowerCase() %>">
    <% p.products.forEach(function (product) { %>
        <div class="col-sm-3 mb-4">
            <div class="card">
                <img class="card-img-top" src="images/products/<%= product.image %>" alt="">
                <div class="card-body">
                    <h5 class="card-title"><%= product.description %></h5>
                    <p class="card-text">Price: <%= product.price %> &#x24;</p>
                </div>
            </div>
        </div>
    <% }); %>
    </div>
<% }); %>


