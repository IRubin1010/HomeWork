<div class="modal fade" id="editUserModal" tabindex="-1" role="dialog" aria-labelledby="editUserModalLabel" aria-hidden="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-brand row">
                    <div class="col-4">
                        <img src="images/brand-logo.png">
                    </div>
                    <div class="align-self-center">
                        <h1>SuperStore</h1>
                        <h2>Edit User</h2>
                    </div>
                </div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="false">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="edit-user-name" class="col-form-label">User Name</label>
                        <input type="text" class="form-control" id="edit-user-name" readonly>
                    </div>
                    <div class="form-group">
                        <label for="edit-user-password" class="col-form-label">Password</label>
                        <input type="text" class="form-control" id="edit-user-password" readonly>
                    </div>
                    <div class="form-group">
                        <label for="edit-user-mail" class="col-form-label">Email</label>
                        <input type="email" class="form-control" id="edit-user-mail">
                    </div>
                    <div class="form-group">
                        <label for="edit-user-role" class="col-form-label">Role</label>
                        <select class="form-control" id="edit-user-role">
                            <option value="client">Client</option>
                            <option value="worker">Worker</option>
                            <option value="administrator">Administrator</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="edit-user-state" class="col-form-label">State</label>
                        <select class="form-control" id="edit-user-state">
                            <option value="active">Active</option>
                            <option value="deleted">Deleted</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-submit" id="btn-edit-user">Submit</button>
            </div>
        </div>
    </div>
</div>