<Window x:Class="PLWPF.splashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="splashScreen" Height="400" Width="1000" WindowStartupLocation="CenterOwner" Icon="image/הורד.jpg">
    <Window.Background>
        <ImageBrush ImageSource="image/גן משחקים.jpg"/>
    </Window.Background>
    <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <TextBlock HorizontalAlignment="center" Margin="0" TextWrapping="Wrap" Text="welcome" VerticalAlignment="center" FontSize="40"/>
            <TextBlock HorizontalAlignment="center" Margin="0" Grid.Row="1" TextWrapping="Wrap" Text="To a management system for mothers and nannys" VerticalAlignment="center" FontSize="40"/>
            <TextBlock HorizontalAlignment="Center" Margin="0" Grid.Row="2" TextWrapping="Wrap" Text=" ©Developed by yitzchk yeret and meir shimon" VerticalAlignment="center" Width="320" FontSize="15"/>
    </Grid>
</Window>
