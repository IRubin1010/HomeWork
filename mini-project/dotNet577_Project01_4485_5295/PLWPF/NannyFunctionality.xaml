<Window x:Class="PLWPF.NannyFunctionality"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="Nanny" Height="210" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Add Nanny" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Bottom" Width="100" Click="AddNanny_Click"/>
        <Button Content="Delete Nanny" HorizontalAlignment="Center" Margin="0" Grid.Row="1" VerticalAlignment="Center" Width="100" Click="DeleteNanny_Click"/>
        <Button Content="Update Nanny" HorizontalAlignment="Center" Margin="0" Grid.Row="2" VerticalAlignment="Top" Width="100" Click="UpdateNanny_Click"/>
    </Grid>
</Window>
