<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".utils.BottomSheetDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_width="80dp"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="26dp"
                    android:src="@drawable/ic_location_on_black_24dp"
                    android:tint="@color/colorAccent" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/rl_1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="From"
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/from_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="street + number"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/from_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="city + state"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Destination"
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/to_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="street + number"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/to_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="city + state"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="80dp"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_2"
                android:layout_width="80dp"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_access_time_black_24dp"
                    android:tint="@color/colorAccent" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/rl_2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="When"
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="22:35:24 - 01/01/0001"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="80dp"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_3"
                android:layout_width="80dp"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_identity_card"
                    android:tint="@color/colorAccent" />

            </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/rl_3"
                    >
                    <LinearLayout
                        android:id="@+id/ll_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Who"
                            android:textColor="@color/textColor" />
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="John doe"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Phone"
                            android:textColor="@color/textColor" />
                        <TextView
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0504182088"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Email"
                            android:textColor="@color/textColor" />

                        <TextView
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="itzikYeret@gmail.com"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginEnd="30dp">
                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/add_passenger"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginStart="47dp"
                                android:src="@drawable/ic_add_passenger"
                                android:tint="@color/colorAccent"
                                android:clickable="true"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="25dp">

                                <android.support.v7.widget.AppCompatImageView
                                    android:id="@+id/dial_phone"
                                    android:layout_width="27dp"
                                    android:layout_height="27dp"
                                    android:layout_marginEnd="20dp"
                                    android:src="@drawable/ic_phone_black_24dp"
                                    android:tint="@color/colorAccent"
                                    android:clickable="true"/>

                                <android.support.v7.widget.AppCompatImageView
                                    android:id="@+id/send_sms"
                                    android:layout_width="27dp"
                                    android:layout_height="27dp"
                                    android:src="@drawable/ic_sms_black_24dp"
                                    android:tint="@color/colorAccent"
                                    android:clickable="true"/>

                            </LinearLayout>
                            <android.support.v7.widget.AppCompatImageView
                                android:id="@+id/send_email"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginStart="47dp"
                                android:src="@drawable/ic_email_black_24dp"
                                android:tint="@color/colorAccent"
                                android:clickable="true"/>
                        </LinearLayout>



                    </RelativeLayout>

                </RelativeLayout>
            
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="80dp"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_4"
                android:layout_width="80dp"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_comment_black_24dp"
                    android:tint="@color/colorAccent" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/rl_4"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comment"
                    android:textColor="@color/textColor" />

                <TextView
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I want a nice car"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginEnd="10dp"/>
            </LinearLayout>

        </RelativeLayout>

        <android.support.design.button.MaterialButton
            android:id="@+id/sheet_btn"
            style="@style/ButtonStyle"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="ACCEPT TRAVEL"
            android:layout_gravity="center"
            android:visibility="visible"/>

    </LinearLayout>

</RelativeLayout>