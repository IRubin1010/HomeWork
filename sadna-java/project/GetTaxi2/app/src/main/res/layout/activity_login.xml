<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".controller.LoginActivity"
    >

    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        android:layout_marginTop="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/linearLayout"
                android:background="@color/colorPrimary"
                android:layout_height="150dp"
                android:gravity="center_horizontal">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_lock_outline_black_24dp"
                    android:background="@drawable/circle"
                    android:tint="@color/white"
                    />
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:text="LOGIN"
                    android:textSize="22sp"/>
            </LinearLayout>
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageView1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/linearLayout"
                android:src="@drawable/square"
                android:layout_marginTop="-15dp"
                android:layout_centerHorizontal="true"
                android:rotation="45"/>

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_below="@id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imageView1UserIcon"
                    android:layout_width="40dp"
                    android:background="@color/colorPrimary"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_person_black_24dp"
                    android:tint="@color/white"/>

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView1UserIcon"
                    android:background="@color/editText"
                    android:hint="UserName"
                    android:paddingLeft="20dp"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_below="@id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/imageView1PasswordIcon"
                    android:layout_width="40dp"
                    android:background="@color/colorPrimary"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_lock_outline_black_24dp"
                    android:tint="@color/white"/>

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/imageView1PasswordIcon"
                    android:layout_alignParentBottom="@+id/imageView1PasswordIcon"
                    android:layout_alignParentTop="true"
                    android:background="@color/editText"
                    android:inputType="textPassword"
                    android:hint="Password"
                    android:paddingLeft="20dp"
                    android:textSize="15sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/relativeLayout2">

            <android.support.v7.widget.AppCompatCheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:layout_centerVertical="true"
                android:text="Remember me"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativeLayout3"
                >
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/SignInBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:background="@color/colorPrimary"
                android:fontFamily="sans-serif-medium"
                android:text="SIGN IN"
                android:textColor="@color/white"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/SignInBtn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Don't have an account? Sign Up"
                android:layout_marginBottom="10dp"
                />
        </RelativeLayout>

</RelativeLayout>




